<nav class="navbar navbar-light bg-light">
  <span class="navbar-brand mb-0 h1">ShortLink</span>
</nav>
<div class="container">
    <div class="p-5">
        <div class="card">
            <div class="card-body">
                <%= form_for @link, remote: true do |form| %>
                    <h5 class="card-title">Enter a URL to shorten</h5>
                    <%= form.text_field :original_url, class: "form-control", placeholder: "Enter URL" %>
                    <%= form.submit %>
                <% end %>
            </div>
            <div id="short-link">
            </div>
        </div>
    </div>
</div>